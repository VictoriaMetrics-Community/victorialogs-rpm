[Unit]
Description=VictoriaLogs is log management and log analytics system from VictoriaMetrics.
# https://docs.victoriametrics.com/victorialogs/
After=network.target

[Service]
Type=simple
User=victorialogs
Group=victorialogs
WorkingDirectory=/var/lib/victorialogs
ReadWritePaths=/var/lib/victorialogs
StartLimitBurst=5
StartLimitInterval=0
Restart=on-failure
RestartSec=5
EnvironmentFile=-/etc/victorialogs/victorialogs.conf
ExecStart=/usr/bin/victorialogs $ARGS
ExecStop=/bin/kill -s SIGTERM $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
# See docs:
# https://docs.victoriametrics.com/single-server-victoriametrics/#tuning
# https://docs.victoriametrics.com/victorialogs/quickstart/
ProtectSystem=full
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=victorialogs
PrivateTmp=yes
ProtectHome=yes
NoNewPrivileges=yes
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes

[Install]
WantedBy=multi-user.target
